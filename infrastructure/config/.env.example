# LLM Analytics Hub - Environment Configuration Template
# Copy this file to .env and update with your values

#==============================================================================
# Environment
#==============================================================================
ENVIRONMENT=dev
NODE_ENV=development

#==============================================================================
# Cloud Provider Configuration
#==============================================================================
# Options: aws, gcp, azure
CLOUD_PROVIDER=aws

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
EKS_CLUSTER_NAME=llm-analytics-hub-dev

# GCP Configuration
GCP_PROJECT_ID=
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
GKE_CLUSTER_NAME=llm-analytics-hub-dev

# Azure Configuration
AZURE_SUBSCRIPTION_ID=
AZURE_LOCATION=eastus
AZURE_RESOURCE_GROUP=llm-analytics-hub-dev-rg
AKS_CLUSTER_NAME=llm-analytics-hub-dev

#==============================================================================
# Kubernetes Configuration
#==============================================================================
K8S_NAMESPACE=llm-analytics-hub
K8S_CONTEXT=

#==============================================================================
# Database Configuration
#==============================================================================
# PostgreSQL/TimescaleDB
DB_HOST=timescaledb-service
DB_PORT=5432
DB_NAME=llm_analytics
DB_USER=postgres
DB_PASSWORD=changeme
DB_SSL_MODE=prefer
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

#==============================================================================
# Redis Configuration
#==============================================================================
REDIS_HOST=redis-cluster
REDIS_PORT=6379
REDIS_PASSWORD=changeme
REDIS_DB=0
REDIS_TLS_ENABLED=false
REDIS_CLUSTER_MODE=true
REDIS_MAX_RETRIES=3

#==============================================================================
# Kafka Configuration
#==============================================================================
KAFKA_BROKERS=kafka-0.kafka-headless:9092,kafka-1.kafka-headless:9092,kafka-2.kafka-headless:9092
KAFKA_TOPIC=llm-analytics-events
KAFKA_CLIENT_ID=llm-analytics-hub
KAFKA_GROUP_ID=analytics-consumers
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

#==============================================================================
# Application Configuration
#==============================================================================
APP_NAME=llm-analytics-hub
APP_VERSION=0.1.0
API_HOST=0.0.0.0
API_PORT=3000
API_BASE_PATH=/api
LOG_LEVEL=info
LOG_FORMAT=json

#==============================================================================
# API Configuration
#==============================================================================
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000
API_RATE_LIMIT=100
API_RATE_WINDOW=60000
CORS_ORIGINS=*
CORS_CREDENTIALS=true

#==============================================================================
# Authentication & Security
#==============================================================================
JWT_SECRET=changeme-generate-secure-secret
JWT_EXPIRATION=24h
API_KEY=changeme-generate-secure-api-key
ENCRYPTION_KEY=changeme-generate-secure-encryption-key

#==============================================================================
# Monitoring & Observability
#==============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=changeme

# OpenTelemetry
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=llm-analytics-hub
OTEL_TRACE_SAMPLE_RATE=0.1

# Logging
LOKI_ENABLED=false
LOKI_URL=

#==============================================================================
# Resource Limits
#==============================================================================
# Application
APP_CPU_REQUEST=250m
APP_CPU_LIMIT=1000m
APP_MEMORY_REQUEST=512Mi
APP_MEMORY_LIMIT=1Gi

# Database
DB_CPU_REQUEST=500m
DB_CPU_LIMIT=2000m
DB_MEMORY_REQUEST=1Gi
DB_MEMORY_LIMIT=4Gi
DB_STORAGE_SIZE=100Gi

# Redis
REDIS_CPU_REQUEST=250m
REDIS_CPU_LIMIT=1000m
REDIS_MEMORY_REQUEST=512Mi
REDIS_MEMORY_LIMIT=2Gi

# Kafka
KAFKA_CPU_REQUEST=500m
KAFKA_CPU_LIMIT=2000m
KAFKA_MEMORY_REQUEST=1Gi
KAFKA_MEMORY_LIMIT=4Gi
KAFKA_STORAGE_SIZE=100Gi

#==============================================================================
# Auto-scaling Configuration
#==============================================================================
HPA_ENABLED=true
HPA_MIN_REPLICAS=3
HPA_MAX_REPLICAS=10
HPA_CPU_TARGET=70
HPA_MEMORY_TARGET=80

#==============================================================================
# Backup Configuration
#==============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_LOCATION=s3://llm-analytics-backups

#==============================================================================
# Alerting Configuration
#==============================================================================
ALERTING_ENABLED=true
ALERT_EMAIL=ops@example.com
SLACK_WEBHOOK_URL=
PAGERDUTY_SERVICE_KEY=

#==============================================================================
# Feature Flags
#==============================================================================
FEATURE_REAL_TIME_ANALYTICS=true
FEATURE_BATCH_PROCESSING=true
FEATURE_ML_MODELS=false
FEATURE_EXPORT_API=true

#==============================================================================
# Third-party Integrations
#==============================================================================
# AWS Services
AWS_S3_BUCKET=
AWS_SQS_QUEUE_URL=
AWS_SNS_TOPIC_ARN=

# GCP Services
GCP_STORAGE_BUCKET=
GCP_PUBSUB_TOPIC=

# Azure Services
AZURE_STORAGE_ACCOUNT=
AZURE_EVENTHUB_NAMESPACE=

#==============================================================================
# Development & Testing
#==============================================================================
DEBUG=false
TEST_MODE=false
MOCK_EXTERNAL_SERVICES=false
SEED_DATA=false

#==============================================================================
# Performance Tuning
#==============================================================================
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=128
WORKER_THREADS=4

#==============================================================================
# Compliance & Governance
#==============================================================================
DATA_RETENTION_DAYS=90
PII_ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
GDPR_COMPLIANCE=true
