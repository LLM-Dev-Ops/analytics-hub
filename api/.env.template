# LLM-Analytics-Hub Environment Configuration Template
# Copy to .env and fill in values
# NEVER commit .env files with secrets to version control

# =============================================================================
# SERVICE IDENTIFICATION
# =============================================================================
SERVICE_NAME=llm-analytics-hub
SERVICE_VERSION=1.0.0
NODE_ENV=production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
HOST=0.0.0.0

# =============================================================================
# PLATFORM ENVIRONMENT (REQUIRED)
# =============================================================================
# Values: dev | staging | prod
PLATFORM_ENV=dev

# =============================================================================
# RUVECTOR SERVICE (REQUIRED - Persistence Layer)
# =============================================================================
# CRITICAL: LLM-Analytics-Hub NEVER connects directly to Google SQL
# ALL persistence occurs via ruvector-service client calls only
RUVECTOR_ENDPOINT=https://ruvector-service-PROJECT_ID.REGION.run.app
RUVECTOR_API_KEY=

# =============================================================================
# TELEMETRY (LLM-Observatory Integration)
# =============================================================================
TELEMETRY_ENDPOINT=https://llm-observatory-PROJECT_ID.REGION.run.app

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=*

# =============================================================================
# CACHE CONFIGURATION (Optional - Redis)
# =============================================================================
# Note: For stateless Cloud Run, prefer in-memory caching or external Redis
# REDIS_HOST=
# REDIS_PORT=6379
# REDIS_PASSWORD=

# =============================================================================
# NOTES
# =============================================================================
# - All secrets should be stored in Google Secret Manager
# - Environment variables resolve dynamically at runtime
# - No hardcoded service names or URLs in agent code
# - No embedded credentials or mutable analytical state
